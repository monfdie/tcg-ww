<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Panel: Create</title>
    <link rel="stylesheet" href="/style.css">
    <style>
        body { overflow-y: auto; padding: 40px; background: #0b0d17; }
        .form-container { 
            max-width: 700px; margin: 0 auto; background: #161c30; 
            padding: 40px; border-radius: 12px; border: 1px solid #2a3454; 
            box-shadow: 0 10px 40px rgba(0,0,0,0.5);
        }
        
        /* –°—Ç–∏–ª–∏ –ø–µ—Ä–µ–∫–ª—é—á–∞—Ç–µ–ª—è —Ç–∏–ø–æ–≤ */
        .type-switcher {
            display: flex; gap: 15px; margin-bottom: 30px; border-bottom: 1px solid #2a3454; padding-bottom: 20px;
        }
        .type-btn {
            flex: 1; padding: 15px; background: transparent; border: 1px solid #3c4566;
            color: #8da4c4; font-family: 'Segoe UI', sans-serif; font-weight: bold;
            font-size: 1.1em; cursor: pointer; border-radius: 6px; transition: 0.2s;
            text-transform: uppercase;
        }
        .type-btn:hover { background: rgba(255,255,255,0.05); color: #fff; }
        
        .type-btn.active {
            background: #4facfe; color: #0b0d17; border-color: #4facfe;
            box-shadow: 0 0 15px rgba(79, 172, 254, 0.4);
        }
        /* –°—Ç–∏–ª—å –¥–ª—è –∞–∫—Ç–∏–≤–Ω–æ–π –∫–Ω–æ–ø–∫–∏ –Ω–æ–≤–æ—Å—Ç–µ–π (–∂–µ–ª—Ç—ã–π) */
        .type-btn.active-news {
            background: #d4af37; color: #0b0d17; border-color: #d4af37;
            box-shadow: 0 0 15px rgba(212, 175, 55, 0.4);
        }

        label { display: block; margin-top: 18px; color: #a0b4d0; font-size: 0.9em; margin-bottom: 5px; }
        input, select, textarea { 
            width: 100%; padding: 12px; background: #0f131f; border: 1px solid #3c4566; 
            color: white; border-radius: 6px; box-sizing: border-box; font-family: 'Segoe UI', sans-serif;
        }
        input:focus, select:focus, textarea:focus { border-color: #4facfe; outline: none; }

        .section-header { 
            margin-top: 25px; margin-bottom: 10px; color: #fff; 
            font-family: 'Cinzel', serif; font-size: 1.2em; border-bottom: 1px solid #333; padding-bottom: 5px;
        }
        
        /* –°–∫—Ä—ã—Ç—ã–µ –±–ª–æ–∫–∏ */
        .hidden { display: none; }
        
        .submit-btn {
            margin-top: 30px; width: 100%; padding: 15px; font-size: 1.2em; font-weight: bold;
            border: none; border-radius: 6px; cursor: pointer; text-transform: uppercase; transition: 0.2s;
        }
        .btn-tour { background: #4facfe; color: #000; }
        .btn-tour:hover { box-shadow: 0 0 20px rgba(79, 172, 254, 0.5); }
        
        .btn-news { background: #d4af37; color: #000; }
        .btn-news:hover { box-shadow: 0 0 20px rgba(212, 175, 55, 0.5); }
    </style>
</head>
<body>
    <div class="form-container">
        <h1 style="color: #fff; margin-top: 0; text-align: center; margin-bottom: 30px;">Content Creator</h1>
        
        <div class="type-switcher">
            <button type="button" class="type-btn active" onclick="setMode('tournament')" id="btn-tour">üèÜ Create Tournament</button>
            <button type="button" class="type-btn" onclick="setMode('announcement')" id="btn-news">üì¢ Create News Post</button>
        </div>

        <form action="/admin/add" method="POST" enctype="multipart/form-data">
            
            <input type="hidden" name="type" id="typeInput" value="tournament">

            <label>Title (Headline):</label>
            <input name="title" required placeholder="Ex: Abyss Cup Winter or New Patch Notes">

            <label>Slug (Optional ID):</label>
            <input name="slug" placeholder="Leave empty to auto-generate">

            <div id="tournament-fields">
                <div class="section-header">Tournament Details</div>
                
                <div style="display: flex; gap: 15px;">
                    <div style="flex:1">
                        <label>Date Display:</label>
                        <input name="date" placeholder="Feb 25, 2026">
                    </div>
                    <div style="flex:1">
                        <label>Prize Pool:</label>
                        <input name="prize" placeholder="100 $">
                    </div>
                </div>

                <div style="display: flex; gap: 15px;">
                    <div style="flex:1">
                        <label>Region:</label>
                        <select name="region">
                            <option value="Global">Global</option>
                            <option value="AS">AS</option>
                            <option value="EU">EU</option>
                            <option value="NA">NA</option>
                        </select>
                    </div>
                    <div style="flex:1">
                        <label>System:</label>
                        <select name="system">
                            <option value="Draft">Draft</option>
                            <option value="Allpick">Allpick</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>

                <label>Registration Link / Info Link:</label>
                <input name="regLink" placeholder="https://...">

                <div class="section-header">Style & Behavior</div>
                
                <div style="display: flex; gap: 15px;">
                    <div style="flex:1">
                        <label>Card Style:</label>
                        <select name="cardStyle">
                            <option value="blue">Blue (Standard)</option>
                            <option value="gold">Gold (Featured)</option>
                        </select>
                    </div>
                    <div style="flex:1">
                        <label>Badge Text:</label>
                        <input name="badgeText" value="OPEN">
                    </div>
                </div>

                <label>Modal Description (Quick View Info):</label>
                <textarea name="description" rows="3" placeholder="Rules, format, requirements..."></textarea>

                <div style="margin-top: 15px; background: rgba(0,0,0,0.3); padding: 10px; border-radius: 4px; display: flex; align-items: center;">
                    <input type="checkbox" name="openInModal" style="width: 20px; margin: 0 10px 0 0;">
                    <span style="color: #fff; font-size: 0.9em;">Open info in Popup instead of Link?</span>
                </div>
            </div>

            <div id="news-fields" class="hidden">
                <div class="section-header">Post Content</div>
                
                <label style="color: #d4af37;">Upload Image (Required for News):</label>
                <div style="border: 2px dashed #3c4566; padding: 20px; text-align: center; border-radius: 6px;">
                    <input type="file" name="image" accept="image/*" style="border: none; background: transparent;">
                </div>

                <label>Post Text / Description:</label>
                <textarea name="newsDescription" rows="6" placeholder="Write your news content here..."></textarea>
                
                <label>External Link (Optional):</label>
                <input name="newsLink" placeholder="https://youtube.com/...">
            </div>

            <label style="margin-top: 25px;">Auto-Delete Date (Optional):</label>
            <input type="date" name="visibleUntil">

            <button type="submit" class="submit-btn btn-tour" id="submit-btn">Create Tournament</button>
        </form>
    </div>

    <script>
        function setMode(mode) {
            const tourFields = document.getElementById('tournament-fields');
            const newsFields = document.getElementById('news-fields');
            const typeInput = document.getElementById('typeInput');
            const btnTour = document.getElementById('btn-tour');
            const btnNews = document.getElementById('btn-news');
            const submitBtn = document.getElementById('submit-btn');

            if (mode === 'tournament') {
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –¢—É—Ä–Ω–∏—Ä
                tourFields.classList.remove('hidden');
                newsFields.classList.add('hidden');
                typeInput.value = 'tournament';
                
                // –°—Ç–∏–ª–∏ –∫–Ω–æ–ø–æ–∫
                btnTour.classList.add('active');
                btnNews.classList.remove('active', 'active-news');
                submitBtn.innerText = 'CREATE TOURNAMENT';
                submitBtn.className = 'submit-btn btn-tour';

            } else {
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –ù–æ–≤–æ—Å—Ç–∏
                tourFields.classList.add('hidden');
                newsFields.classList.remove('hidden');
                typeInput.value = 'announcement';
                
                // –°—Ç–∏–ª–∏ –∫–Ω–æ–ø–æ–∫
                btnTour.classList.remove('active');
                btnNews.classList.add('active', 'active-news');
                submitBtn.innerText = 'PUBLISH NEWS';
                submitBtn.className = 'submit-btn btn-news';
            }
        }
    </script>
</body>
</html>
