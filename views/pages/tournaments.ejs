    /* --- –§–∏–ª—å—Ç—Ä—ã (–ß–∏–ø—Å—ã) --- */
    .filters-container {
        display: flex;
        gap: 10px;
        margin-bottom: 30px;
        flex-wrap: wrap;
    }
    .filter-chip {
        background: rgba(43, 52, 82, 0.6);
        border: 1px solid #3c4566;
        padding: 6px 16px;
        border-radius: 20px;
        color: #8da4c4;
        font-family: 'Segoe UI', sans-serif;
        font-size: 0.9em;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        user-select: none;
    }
    .filter-chip:hover {
        background: rgba(79, 172, 254, 0.2);
        color: #fff;
        border-color: #4facfe;
    }
    .filter-chip.active {
        background: #4facfe;
        color: #fff;
        border-color: #4facfe;
        box-shadow: 0 0 15px rgba(79, 172, 254, 0.4);
    }

    /* --- –°–µ—Ç–∫–∞ –∏ –ö–∞—Ä—Ç–æ—á–∫–∏ --- */
    .tournament-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
        min-height: 50px; /* –ß—Ç–æ–±—ã –ø—É—Å—Ç–æ–π –±–ª–æ–∫ –∏–º–µ–ª –≤—ã—Å–æ—Ç—É */
    }
    
    .empty-message {
        text-align: center;
        color: #556;
        padding: 40px;
        border: 1px dashed #2a3454;
        border-radius: 6px;
        font-family: 'Segoe UI', sans-serif;
    }

    .tour-card {
        display: flex;
        height: 140px;
        background: rgba(22, 28, 48, 0.8);
        border: 1px solid #2a3454;
        border-radius: 6px;
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s, border-color 0.2s;
        position: relative;
        text-decoration: none;
    }

    .tour-card:hover {
        transform: translateX(5px);
        border-color: #4facfe;
        box-shadow: 0 5px 20px rgba(0,0,0,0.5);
        background: rgba(26, 32, 55, 0.95);
    }

    .tour-img-wrapper {
        width: 280px;
        flex-shrink: 0;
        position: relative;
        overflow: hidden;
    }
    .tour-img-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s;
    }
    .tour-card:hover .tour-img-wrapper img {
        transform: scale(1.05);
    }
    
    .tour-status-overlay {
        position: absolute;
        top: 10px; left: 10px;
        background: rgba(0, 0, 0, 0.7);
        padding: 2px 8px;
        font-size: 0.75em;
        border-radius: 4px;
        border: 1px solid #ff4444;
        color: #ff4444;
        font-weight: bold;
        text-transform: uppercase;
        display: none;
    }
    .is-live .tour-status-overlay { display: block; }
    .is-live { border-left: 3px solid #ff4444; }

    .tour-content {
        flex-grow: 1;
        padding: 20px 25px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .tour-title {
        font-family: 'Segoe UI', sans-serif;
        font-size: 1.4em;
        font-weight: bold;
        color: #fff;
        margin-bottom: 8px;
    }
    
    .tour-meta {
        font-size: 0.9em;
        color: #8da4c4;
        margin-bottom: 12px;
        display: flex;
        gap: 15px;
    }
    
    .tour-tags { display: flex; gap: 8px; }
    .tag-badge {
        background: rgba(255, 255, 255, 0.05);
        color: #aaa;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 0.85em;
        font-family: 'Segoe UI', sans-serif;
    }
    
    .tag-region { color: #d4af37; background: rgba(212, 175, 55, 0.1); }
    .tag-system { color: #4facfe; background: rgba(79, 172, 254, 0.1); }

</style>

