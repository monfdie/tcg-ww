<script>
    function filterTournaments(tag, btnElement, gridId) {
        // 1. –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –∞–∫—Ç–∏–≤–Ω–æ–π –∫–Ω–æ–ø–∫–æ–π (—Ç–æ–ª—å–∫–æ –≤–Ω—É—Ç—Ä–∏ —Å–≤–æ–µ–≥–æ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞)
        // –ù–∞—Ö–æ–¥–∏–º —Ä–æ–¥–∏—Ç–µ–ª—è –∫–Ω–æ–ø–∫–∏ (–∫–æ–Ω—Ç–µ–π–Ω–µ—Ä —Ñ–∏–ª—å—Ç—Ä–æ–≤)
        const filterContainer = btnElement.parentElement;
        
        // –£–±–∏—Ä–∞–µ–º –∫–ª–∞—Å—Å active —É –≤—Å–µ—Ö –∫–Ω–æ–ø–æ–∫ –í–ù–£–¢–†–ò —ç—Ç–æ–≥–æ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞
        filterContainer.querySelectorAll('.filter-chip').forEach(el => el.classList.remove('active'));
        
        // –î–æ–±–∞–≤–ª—è–µ–º –∫–ª–∞—Å—Å active –Ω–∞–∂–∞—Ç–æ–π –∫–Ω–æ–ø–∫–µ
        btnElement.classList.add('active');

        // 2. –§–∏–ª—å—Ç—Ä–∞—Ü–∏—è –∫–∞—Ä—Ç–æ—á–µ–∫ (—Ç–æ–ª—å–∫–æ –≤–Ω—É—Ç—Ä–∏ —Ü–µ–ª–µ–≤–æ–π —Å–µ—Ç–∫–∏)
        const grid = document.getElementById(gridId);
        if (!grid) return;
        
        // –ù–∞—Ö–æ–¥–∏–º –∫–∞—Ä—Ç–æ—á–∫–∏ –∏ —Å–æ–æ–±—â–µ–Ω–∏–µ "–ø—É—Å—Ç–æ"
        const cards = grid.querySelectorAll('.tour-card');
        const emptyMsg = grid.querySelector('.empty-message');

        // –ï—Å–ª–∏ —ç—Ç–æ –∞—Ä—Ö–∏–≤ –∏ —Ç–∞–º —Ç–æ–ª—å–∫–æ emptyMsg, –Ω–∏—á–µ–≥–æ –Ω–µ —Ñ–∏–ª—å—Ç—Ä—É–µ–º, –ø—Ä–æ—Å—Ç–æ –≤—ã—Ö–æ–¥–∏–º
        if (cards.length === 0) return;

        cards.forEach(card => {
            const cardTags = card.getAttribute('data-tags');
            
            if (tag === 'all') {
                card.style.display = 'flex';
            } else {
                if (cardTags.includes(tag)) {
                    card.style.display = 'flex';
                } else {
                    card.style.display = 'none';
                }
            }
        });
    }
</script>

