const mongoose = require('mongoose');

const tournamentSchema = new mongoose.Schema({
    slug: { type: String, unique: true, required: true },
    title: String,
    date: String,
    prize: String,
    region: String,
    system: String,
    regLink: String,
    
    // Новые поля для Главной страницы
    cardStyle: { type: String, default: 'blue' }, // 'gold' или 'blue'
    badgeText: { type: String, default: 'OPEN' }, // Текст в углу (SOON, LIVE, OPEN)
    
    // Авто-скрытие (как мы обсуждали ранее)
    visibleUntil: { type: Date },
    isLive: { type: Boolean, default: true }
});

module.exports = mongoose.model('Tournament', tournamentSchema);
