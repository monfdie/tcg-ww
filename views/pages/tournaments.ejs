            <div class="filter-chip" onclick="toggleFilter('NA', this, 'grid-live')">NA</div>
            <div class="filter-chip" onclick="toggleFilter('EU', this, 'grid-live')">EU</div>
            <div class="filter-chip" onclick="toggleFilter('Allpick', this, 'grid-live')">Allpick</div>
            <div class="filter-chip" onclick="toggleFilter('Draft', this, 'grid-live')">Draft</div>
        </div>

        <div class="tournament-list" id="grid-live">
            
            <% if (tournaments && tournaments.length > 0) { %>
                <% tournaments.forEach(tour => { %>
                    <a href="/tournament/<%= tour.slug %>" class="tour-card" data-tags="<%= tour.region %> <%= tour.system %>">
                        <div class="tour-content">
                            <div class="tour-title"><%= tour.title %></div>
                            <div class="tour-meta">
                                <span>üìÖ <%= tour.date %></span>
                                <span>üèÜ Prize: <%= tour.prize %></span>
                            </div>
                            <div class="tour-tags">
                                <span class="tag-badge tag-region"><%= tour.region %></span>
                                <span class="tag-badge tag-system"><%= tour.system %></span>
                            </div>
                        </div>
                    </a>
                <% }); %>
            <% } %>

        </div>
    </div>




    <div class="tournament-section">
        <div class="section-header">
            <h2 class="section-title" style="color: #8da4c4;">Archive</h2>
        </div>

        <div class="filters-container" id="filters-archive">
            <div class="filter-chip" onclick="toggleFilter('AS', this, 'grid-archive')">AS</div>
            <div class="filter-chip" onclick="toggleFilter('NA', this, 'grid-archive')">NA</div>
            <div class="filter-chip" onclick="toggleFilter('EU', this, 'grid-archive')">EU</div>
            <div class="filter-chip" onclick="toggleFilter('Allpick', this, 'grid-archive')">Allpick</div>
            <div class="filter-chip" onclick="toggleFilter('Draft', this, 'grid-archive')">Draft</div>
        </div>

        <div class="tournament-list" id="grid-archive">
            <div class="empty-message">No archived tournaments yet.</div>
        </div>
    </div>

</div>

<div id="tournament-modal" class="modal-overlay" onclick="closeModal(event)">
    <div class="modal-content">
        <span class="close-modal" onclick="closeModal(event)">√ó</span>
        
        <div class="banner-header">
            <div class="banner-left">
                <div class="banner-info">
                    <h1 id="modal-title">Tournament Name</h1>
                    <div class="banner-actions">
                        <a href="#" id="modal-link" target="_blank" class="action-btn">
                            <i>üèÜ</i> <span id="modal-platform">Platform Page</span>
                        </a>
                        
                        <div style="display: flex; gap: 8px; margin-left: 15px;">
                            <span class="tag-badge tag-region" id="modal-region">AS</span>
                            <span class="tag-badge tag-system" id="modal-system">Allpick</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="banner-right">
                <div class="prize-pool">
                    <span class="prize-icon">üèÜ</span> <span id="modal-prize">0</span>
                </div>
            </div>
        </div>

        <div class="modal-body-empty">
            NO MATCHES AVAILABLE
        </div>
    </div>
</div>

<script>
    // --- –õ–æ–≥–∏–∫–∞ —Ñ–∏–ª—å—Ç—Ä–æ–≤ ---
    function toggleFilter(tag, btnElement, gridId) {
        btnElement.classList.toggle('active');
        applyFilters(btnElement.parentElement, gridId);
    }

    function applyFilters(filterContainer, gridId) {
        const activeChips = filterContainer.querySelectorAll('.filter-chip.active');
        const activeTags = Array.from(activeChips).map(chip => chip.innerText.trim());
        const grid = document.getElementById(gridId);
        if (!grid) return;
        
        // –í—ã–±–∏—Ä–∞–µ–º –∏ —Å—Å—ã–ª–∫–∏ (–¥–ª—è –ë–î —Ç—É—Ä–Ω–∏—Ä–æ–≤), –∏ –¥–∏–≤—ã (–¥–ª—è —Å—Ç–∞—Ä—ã—Ö)
        const cards = grid.querySelectorAll('.tour-card');
        
        if (activeTags.length === 0) {
            cards.forEach(card => card.style.display = 'flex');
            return;
        }

        cards.forEach(card => {
            const cardTags = card.getAttribute('data-tags');
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –µ—Å—Ç—å –ª–∏ –≤—Å–µ –≤—ã–±—Ä–∞–Ω–Ω—ã–µ —Ç–µ–≥–∏ –≤ –∞—Ç—Ä–∏–±—É—Ç–µ data-tags
            const matchesAll = activeTags.every(tag => cardTags && cardTags.includes(tag));
            if (matchesAll) card.style.display = 'flex';
            else card.style.display = 'none';
        });
    }

    // --- –õ–æ–≥–∏–∫–∞ –ú–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ (–î–ª—è —Å—Ç–∞—Ä—ã—Ö —Ç—É—Ä–Ω–∏—Ä–æ–≤) ---
    const modal = document.getElementById('tournament-modal');
    
    function openModal(title, link, prize, platform, region, system) {
        document.getElementById('modal-title').innerText = title;
        document.getElementById('modal-link').href = link;
        document.getElementById('modal-platform').innerText = platform + ' Page';
        document.getElementById('modal-prize').innerText = prize;
        document.getElementById('modal-region').innerText = region;
        document.getElementById('modal-system').innerText = system;
        
        modal.classList.add('open');
    }

    function closeModal(e) {
        if (e.target === modal || e.target.classList.contains('close-modal')) {
            modal.classList.remove('open');
        }
    }
</script>

