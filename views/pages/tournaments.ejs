</div>

<div class="tournament-list" id="real-list-archive" style="display: none;">
    <% if (archive && archive.length > 0) { %>
        <% archive.forEach(tour => { %>
            <a href="<%= (tour.regLink && tour.regLink.startsWith('http')) ? tour.regLink : '/tournament/' + tour.slug %>" 
               class="tour-card-long archived-card" target="<%= (tour.regLink && tour.regLink.startsWith('http')) ? '_blank' : '_self' %>"
               data-date="<%= tour.date %>" data-region="<%= tour.region %>">
                <div class="card-left-strip strip-blue"></div>
                <div class="card-main-content">
                    <div class="card-header-row">
                        <h2 class="card-title"><%= tour.title %></h2>
                        <div class="card-badges">
                            <span class="badge-region"><%= tour.region %></span>
                            <span class="badge-system"><%= tour.system %></span>
                        </div>
                    </div>
                    <div class="card-info-row">
                        <span class="info-item"><i class="icon">üìÖ</i> <%= tour.date %></span>
                        <span class="info-item prize"><i class="icon">üèÜ</i> <%= tour.prize %></span>
                    </div>
                </div>
                <div class="card-action"><span class="btn-arrow">‚ûú</span></div>
            </a>
        <% }); %>
    <% } else { %>
        <div class="empty-state">Archive is empty.</div>
    <% } %>
</div>

<script>
    // –ü–µ—Ä–µ–Ω–æ—Å –∫–æ–Ω—Ç–µ–Ω—Ç–∞ –≤ –ø—Ä–∞–≤–∏–ª—å–Ω—ã–µ –º–µ—Å—Ç–∞ (—Ç–∞–∫ –∫–∞–∫ –º—ã –ø–µ—Ä–µ–ø–∏—Å–∞–ª–∏ HTML —Å—Ç—Ä—É–∫—Ç—É—Ä—É –≤—ã—à–µ)
    document.getElementById('section-active').innerHTML = ''; 
    document.getElementById('section-active').appendChild(document.getElementById('real-list-active'));
    
    document.getElementById('section-archive').innerHTML = '';
    document.getElementById('section-archive').appendChild(document.getElementById('real-list-archive'));

    // –õ–æ–≥–∏–∫–∞ –¢–∞–±–æ–≤
    function showSection(section, btn) {
        document.getElementById('section-active').style.display = 'none';
        document.getElementById('section-archive').style.display = 'none';
        document.getElementById('real-list-active').style.display = 'none';
        document.getElementById('real-list-archive').style.display = 'none';
        
        // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –Ω—É–∂–Ω—ã–π
        document.getElementById('section-' + section).style.display = 'block';
        document.getElementById('real-list-' + section).style.display = 'flex';

        // –ö–Ω–æ–ø–∫–∏
        document.querySelectorAll('.switch-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
    }

    // –õ–æ–≥–∏–∫–∞ –°–æ—Ä—Ç–∏—Ä–æ–≤–∫–∏
    function sortTournaments(criteria) {
        // –û–ø—Ä–µ–¥–µ–ª—è–µ–º –∫–∞–∫–æ–π —Å–ø–∏—Å–æ–∫ —Å–µ–π—á–∞—Å –≤–∏–¥–µ–Ω
        const activeList = document.getElementById('real-list-active').style.display !== 'none' 
            ? document.getElementById('real-list-active') 
            : document.getElementById('real-list-archive');
            
        const cards = Array.from(activeList.getElementsByClassName('tour-card-long'));
        
        cards.sort((a, b) => {
            if (criteria === 'region') {
                return a.dataset.region.localeCompare(b.dataset.region);
            } else if (criteria === 'newest') {
                // –ü—Ä–æ—Å—Ç–∞—è —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–∞ —Å—Ç—Ä–æ–∫, –ª—É—á—à–µ –±—ã –ø–æ –¥–∞—Ç–µ, –Ω–æ –¥–ª—è –ø—Ä–∏–º–µ—Ä–∞ —Å–æ–π–¥–µ—Ç
                return b.dataset.date.localeCompare(a.dataset.date);
            } else if (criteria === 'oldest') {
                return a.dataset.date.localeCompare(b.dataset.date);
            }
        });
        
        cards.forEach(card => activeList.appendChild(card));
    }
</script>

