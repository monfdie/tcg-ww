<%- include('../partials/header') %>

<style>
    /* --- –°—Ç–∏–ª–∏ —Å—Ç—Ä–∞–Ω–∏—Ü—ã --- */weekly
    .tournament-section { margin-bottom: 60px; }

    /* –ó–∞–≥–æ–ª–æ–≤–∫–∏ —Ä–∞–∑–¥–µ–ª–æ–≤ */
    .section-header {
        display: flex; align-items: center; gap: 15px; margin-bottom: 25px;
        border-bottom: 1px solid #2a3454; padding-bottom: 15px;
    }
    .section-title {
        font-family: 'Cinzel', serif; font-size: 2em; color: #fff; margin: 0;
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.1); text-transform: uppercase;
    }

    /* --- –§–∏–ª—å—Ç—Ä—ã --- */
    .filters-container { display: flex; gap: 10px; margin-bottom: 30px; flex-wrap: wrap; }
    .filter-chip {
        background: rgba(43, 52, 82, 0.6); border: 1px solid #3c4566;
        padding: 8px 24px; border-radius: 20px; color: #8da4c4;
        font-family: 'Segoe UI', sans-serif; font-size: 0.95em; font-weight: 600;
        cursor: pointer; transition: all 0.2s; user-select: none;
    }
    .filter-chip:hover { background: rgba(79, 172, 254, 0.2); color: #fff; border-color: #4facfe; }
    .filter-chip.active {
        background: #4facfe; color: #fff; border-color: #4facfe;
        box-shadow: 0 0 15px rgba(79, 172, 254, 0.4);
    }

    /* --- –°–µ—Ç–∫–∞ —Ç—É—Ä–Ω–∏—Ä–æ–≤ --- */
    .tournament-list { display: flex; flex-direction: column; gap: 15px; min-height: 50px; }
    
    /* –ö–∞—Ä—Ç–æ—á–∫–∞ */
    .tour-card {
        display: flex; height: 140px; background: rgba(22, 28, 48, 0.8);
        border: 1px solid #2a3454; border-radius: 6px; overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s, border-color 0.2s;
        cursor: pointer; text-decoration: none; position: relative;
        color: inherit; /* –î–ª—è —Å—Å—ã–ª–æ–∫ */
    }
    .tour-card:hover {
        transform: translateX(5px); border-color: #4facfe;
        box-shadow: 0 5px 20px rgba(0,0,0,0.5); background: rgba(26, 32, 55, 0.95);
    }
    
    .tour-content { flex-grow: 1; padding: 20px 25px; display: flex; flex-direction: column; justify-content: center; }
    .tour-title { font-family: 'Segoe UI', sans-serif; font-size: 1.4em; font-weight: bold; color: #fff; margin-bottom: 8px; }
    .tour-meta { font-size: 0.9em; color: #8da4c4; margin-bottom: 12px; display: flex; gap: 15px; }
    .tour-tags { display: flex; gap: 8px; }
    
    /* –°—Ç–∏–ª–∏ –±–µ–π–¥–∂–µ–π (–æ–≤–∞–ª–æ–≤) */
    .tag-badge { 
        background: rgba(255, 255, 255, 0.05); color: #aaa; 
        padding: 4px 12px; border-radius: 12px; font-size: 0.85em; 
        display: inline-flex; align-items: center; justify-content: center;
        border: 1px solid rgba(255,255,255,0.1);
    }
    .tag-region { color: #d4af37; background: rgba(212, 175, 55, 0.1); border-color: rgba(212, 175, 55, 0.2); }
    .tag-system { color: #4facfe; background: rgba(79, 172, 254, 0.1); border-color: rgba(79, 172, 254, 0.2); }

    .empty-message { text-align: center; color: #556; padding: 40px; border: 1px dashed #2a3454; border-radius: 6px; }

    /* --- –ú–û–î–ê–õ–¨–ù–û–ï –û–ö–ù–û (–í–û–ó–í–†–ê–©–ï–ù–û) --- */
    .modal-overlay {
        position: fixed; top: 0; left: 0; width: 100%; height: 100%;
        background: rgba(0, 0, 0, 0.85); backdrop-filter: blur(5px);
        z-index: 2000; display: none; opacity: 0; transition: opacity 0.3s;
        align-items: center; justify-content: center;
    }
    .modal-overlay.open { display: flex; opacity: 1; }

    .modal-content {
        width: 90%; max-width: 1100px; background: #0b0d17;
        border: 1px solid #3c4566; border-radius: 8px;
        box-shadow: 0 0 50px rgba(0,0,0,0.8); overflow: hidden;
        animation: slideUp 0.3s ease-out; position: relative;
    }
    @keyframes slideUp { from { transform: translateY(50px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }

    .banner-header {
        background: linear-gradient(90deg, #0f1524 0%, #161d30 50%, #0f1524 100%);
        padding: 20px 40px; display: flex; align-items: center; justify-content: space-between;
        border-bottom: 1px solid #2a3454; position: relative; min-height: 120px;
    }
    .banner-left { display: flex; align-items: center; gap: 25px; }
    .banner-info h1 {
        font-family: 'Segoe UI', sans-serif; font-size: 1.8em; color: #fff; margin: 0 0 15px 0;
        text-shadow: 0 2px 4px rgba(0,0,0,0.5);
    }
    .banner-actions { display: flex; gap: 10px; align-items: center; }
    .action-btn {
        display: flex; align-items: center; gap: 8px; background: rgba(255,255,255,0.1); color: #fff;
        padding: 8px 16px; border-radius: 20px; text-decoration: none;
        font-size: 0.9em; font-family: 'Segoe UI', sans-serif; font-weight: 500;
        transition: 0.2s; border: 1px solid transparent;
    }
    .action-btn:hover { background: rgba(255,255,255,0.2); border-color: #aaa; }
    .action-btn i { font-style: normal; }

    .banner-right { text-align: right; }
    .prize-pool { font-size: 2.5em; font-family: 'Segoe UI', sans-serif; font-weight: bold; color: #fff; display: flex; align-items: center; gap: 10px; }
    .prize-icon { font-size: 0.8em; color: #d4af37; }

    .close-modal {
        position: absolute; top: 15px; right: 20px; font-size: 30px; color: #555; cursor: pointer; z-index: 10;
    }
    .close-modal:hover { color: #fff; }

    .modal-body-empty {
        height: 300px; display: flex; align-items: center; justify-content: center;
        color: #3c4566; font-family: 'Cinzel', serif; font-size: 1.5em;
        background: radial-gradient(circle at center, rgba(30,30,50,0.3) 0%, transparent 70%);
    }
</style>

<div class="page-container">
    
