<%- include('../partials/header') %>

<div class="page-container">
    
    <div class="tour-header-panel">
        <h1 class="page-title">Tournaments</h1>
        
        <div class="controls-row">
            <div class="view-switcher">
                <button class="switch-btn active" onclick="showSection('active', this)">Active Events</button>
                <button class="switch-btn" onclick="showSection('archive', this)">Archive</button>
            </div>

            <div class="sort-container">
                <label>Sort by:</label>
                <select id="sortSelect" onchange="sortTournaments(this.value)">
                    <option value="newest">Newest Date</option>
                    <option value="oldest">Oldest Date</option>
                    <option value="region">Region</option>
                </select>
            </div>
        </div>
    </div>

    <div id="section-active" class="tournament-section">
        <div class="tournament-list" id="list-active">
            <% if (tournaments && tournaments.length > 0) { %>
                <% tournaments.forEach(tour => { %>
                    <a href="<%= (tour.regLink && tour.regLink.startsWith('http')) ? tour.regLink : '/tournament/' + tour.slug %>" 
                       class="tour-card-long" 
                       target="<%= (tour.regLink && tour.regLink.startsWith('http')) ? '_blank' : '_self' %>"
                       data-date="<%= tour.date %>" 
                       data-region="<%= tour.region %>">
                        
                        <div class="card-left-strip <%= tour.cardStyle === 'gold' ? 'strip-gold' : 'strip-blue' %>"></div>
                        
                        <div class="card-main-content">
                            <div class="card-header-row">
                                <h2 class="card-title"><%= tour.title %></h2>
                                <div class="card-badges">
                                    <span class="badge-region"><%= tour.region %></span>
                                    <span class="badge-system"><%= tour.system %></span>
                                </div>
                            </div>
                            
                            <div class="card-info-row">
                                <span class="info-item"><span class="icon">üìÖ</span> <%= tour.date %></span>
                                <span class="info-item prize"><span class="icon">üèÜ</span> <%= tour.prize %></span>
                            </div>
                        </div>

                        <div class="card-action">
                            <span class="btn-arrow">‚ûú</span>
                        </div>
                    </a>
                <% }); %>
            <% } else { %>
                <div class="empty-state">No active tournaments right now.</div>
            <% } %>
        </div>
    </div>

    <div id="section-archive" class="tournament-section" style="display: none;">
        <div class="tournament-list" id="list-archive">
            <% if (archive && archive.length > 0) { %>
                <% archive.forEach(tour => { %>
                    <a href="<%= (tour.regLink && tour.regLink.startsWith('http')) ? tour.regLink : '/tournament/' + tour.slug %>" 
                       class="tour-card-long archived-card" 
                       target="<%= (tour.regLink && tour.regLink.startsWith('http')) ? '_blank' : '_self' %>"
                       data-date="<%= tour.date %>" 
                       data-region="<%= tour.region %>">
                        
                        <div class="card-left-strip strip-blue"></div>
                        
                        <div class="card-main-content">
                            <div class="card-header-row">
                                <h2 class="card-title"><%= tour.title %></h2>
                                <div class="card-badges">
                                    <span class="badge-region"><%= tour.region %></span>
                                    <span class="badge-system"><%= tour.system %></span>
                                </div>
                            </div>
                            
                            <div class="card-info-row">
                                <span class="info-item"><span class="icon">üìÖ</span> <%= tour.date %></span>
                                <span class="info-item prize"><span class="icon">üèÜ</span> <%= tour.prize %></span>
                            </div>
                        </div>

                        <div class="card-action">
                            <span class="btn-arrow">‚ûú</span>
                        </div>
                    </a>
                <% }); %>
            <% } else { %>
                <div class="empty-state">Archive is empty.</div>
            <% } %>
        </div>
    </div>

</div>

<style>
    /* –ü–∞–Ω–µ–ª—å —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è */
    .tour-header-panel { margin-bottom: 30px; border-bottom: 1px solid #2a3454; padding-bottom: 20px; }
    .page-title { font-family: 'Cinzel', serif; color: #fff; margin: 0 0 20px 0; font-size: 2em; }
    
    .controls-row { display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 15px; }
    
    .view-switcher { display: flex; gap: 0; background: #0f131f; border-radius: 4px; border: 1px solid #2a3454; overflow: hidden; }
    .switch-btn { background: transparent; color: #8da4c4; padding: 10px 20px; border: none; cursor: pointer; font-family: 'Segoe UI', sans-serif; transition: 0.3s; font-size: 0.9em; }
    .switch-btn:hover { color: #fff; background: rgba(255,255,255,0.05); }
    .switch-btn.active { background: #4facfe; color: #0b0d17; font-weight: bold; }

    .sort-container { display: flex; align-items: center; gap: 10px; color: #8da4c4; font-size: 0.9em; }
    #sortSelect { background: #0f131f; border: 1px solid #2a3454; color: #fff; padding: 8px; border-radius: 4px; width: auto; cursor: pointer; }

    .tournament-list { display: flex; flex-direction: column; gap: 15px; }

    /* –î–ò–ó–ê–ô–ù –ö–ê–†–¢–û–ß–ö–ò (–ì–û–†–ò–ó–û–ù–¢–ê–õ–¨–ù–ê–Ø) */
    .tour-card-long {
        display: flex;
        width: 100%;
        background: rgba(22, 28, 48, 0.8);
        border: 1px solid #2a3454;
        border-radius: 6px;
        text-decoration: none;
        overflow: hidden;
        transition: all 0.2s ease;
        position: relative;
        align-items: stretch;
        min-height: 100px;
    }
    .tour-card-long:hover {
        transform: translateX(5px);
        background: rgba(30, 38, 64, 0.95);
        border-color: #4facfe;
    }
    
    /* –¶–≤–µ—Ç–Ω–∞—è –ø–æ–ª–æ—Å–∫–∞ —Å–ª–µ–≤–∞ */
    .card-left-strip { width: 6px; flex-shrink: 0; }
    .strip-blue { background: #4facfe; }
    .strip-gold { background: #d4af37; box-shadow: 0 0 10px #d4af37; }

    .card-main-content {
        flex-grow: 1;
        padding: 20px 25px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 10px;
    }

    .card-header-row { display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 10px; }
    .card-title { font-family: 'Cinzel', serif; font-size: 1.5em; color: #fff; margin: 0; }
    
    .card-badges { display: flex; gap: 8px; }
    .badge-region { background: rgba(212, 175, 55, 0.1); color: #d4af37; border: 1px solid rgba(212, 175, 55, 0.2); padding: 2px 8px; border-radius: 4px; font-size: 0.8em; font-weight: bold; }
    .badge-system { background: rgba(79, 172, 254, 0.1); color: #4facfe; border: 1px solid rgba(79, 172, 254, 0.2); padding: 2px 8px; border-radius: 4px; font-size: 0.8em; font-weight: bold; }

    .card-info-row { display: flex; gap: 20px; color: #a0b4d0; font-size: 0.95em; align-items: center; }
    .icon { font-style: normal; margin-right: 5px; opacity: 0.7; }
    .prize { color: #d4af37; font-weight: 500; }

    .card-action {
        width: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-left: 1px solid #2a3454;
        color: #4facfe;
        font-size: 1.5em;
        background: rgba(0,0,0,0.2);
    }
    .tour-card-long:hover .card-action { background: rgba(79, 172, 254, 0.1); }

    /* –°—Ç–∏–ª—å –¥–ª—è –∞—Ä—Ö–∏–≤–∞ */
    .archived-card { opacity: 0.6; filter: grayscale(0.8); border-color: #333; }
    .archived-card:hover { opacity: 1; filter: grayscale(0); }
    
    .empty-state { text-align: center; padding: 40px; color: #556; font-style: italic; border: 1px dashed #2a3454; border-radius: 6px; }
</style>

<script>
    function showSection(section, btn) {
        // –°–∫—Ä—ã–≤–∞–µ–º –≤—Å–µ
        document.getElementById('section-active').style.display = 'none';
        document.getElementById('section-archive').style.display = 'none';
        
        // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –Ω—É–∂–Ω—ã–π
        document.getElementById('section-' + section).style.display = 'block';

        // –û–±–Ω–æ–≤–ª—è–µ–º –∫–Ω–æ–ø–∫–∏
        document.querySelectorAll('.switch-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        // –°–±—Ä–∞—Å—ã–≤–∞–µ–º —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫—É –ø—Ä–∏ –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–∏ (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ)
        sortTournaments(document.getElementById('sortSelect').value);
    }

    function sortTournaments(criteria) {
        // –û–ø—Ä–µ–¥–µ–ª—è–µ–º, –∫–∞–∫–æ–π —Å–ø–∏—Å–æ–∫ —Å–µ–π—á–∞—Å –≤–∏–¥–µ–Ω
        const activeSection = document.getElementById('section-active').style.display !== 'none' 
            ? 'list-active' 
            : 'list-archive';
            
        const container = document.getElementById(activeSection);
        const cards = Array.from(container.getElementsByClassName('tour-card-long'));
        
        cards.sort((a, b) => {
            if (criteria === 'region') {
                return a.dataset.region.localeCompare(b.dataset.region);
            } else if (criteria === 'newest') {
                // –ü—ã—Ç–∞–µ–º—Å—è —Å–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å –ø–æ –¥–∞—Ç–µ (—Å—Ç—Ä–æ–∫–∞)
                return b.dataset.date.localeCompare(a.dataset.date);
            } else if (criteria === 'oldest') {
                return a.dataset.date.localeCompare(b.dataset.date);
            }
        });
        
        // –ü–µ—Ä–µ—Å—Ç–∞–≤–ª—è–µ–º —ç–ª–µ–º–µ–Ω—Ç—ã –≤ DOM
        container.innerHTML = '';
        cards.forEach(card => container.appendChild(card));
    }
</script>

<%- include('../partials/footer') %>
