<%- include('../partials/header') %>

<div class="page-container">
    <div class="page-title">
        <h1>История матчей</h1>
        </div>

    <div style="background: rgba(22, 28, 48, 0.95); border: 1px solid #3c4566; padding: 20px; border-radius: 4px;">
        <% if (matches && matches.length > 0) { %>
            <ul style="list-style: none; padding: 0; margin: 0;">
                <% matches.forEach(match => { %>
                    <li style="padding: 15px; border-bottom: 1px solid #2a3454; display: flex; justify-content: space-between; align-items: center;">
                        
                        <div style="display: flex; align-items: center; gap: 20px;">
                            <span style="font-family: 'Segoe UI', monospace; color: #d4af37; font-weight: bold; background: rgba(212, 175, 55, 0.1); padding: 5px 10px; border-radius: 4px; border: 1px solid #554400;">
                                <%= match.roomId %>
                            </span>

                            <span style="font-family: 'Cinzel', serif; font-size: 1.2em; letter-spacing: 1px;">
                                <span style="color: #4facfe; text-shadow: 0 0 10px rgba(79, 172, 254, 0.3);"><%= match.blueName %></span>
                                <span style="color: #666; font-size: 0.8em; margin: 0 10px;">VS</span>
                                <span style="color: #ff6b6b; text-shadow: 0 0 10px rgba(255, 107, 107, 0.3);"><%= match.redName %></span>
                            </span>
                        </div>

                        <div style="text-align: right;">
                            <span style="display: block; color: #8da4c4; font-size: 0.9em;">
                                <%= new Date(match.date).toLocaleDateString() %>
                            </span>
                            <span style="display: block; color: #556; font-size: 0.8em;">
                                <%= new Date(match.date).toLocaleTimeString() %>
                            </span>
                        </div>

                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <div style="text-align: center; padding: 40px; color: #8da4c4;">
                <h3 style="margin-bottom: 10px; color: #fff;">История пуста</h3>
                <p>Сыграйте первый матч, чтобы он появился здесь.</p>
            </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>
