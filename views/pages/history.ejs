<%- include('../partials/header') %>

<div class="page-container">
    <div class="page-title">
        <h1>История матчей</h1>
        <p>Список последних завершенных сессий драфта.</p>
    </div>

    <div style="background: rgba(22, 28, 48, 0.95); border: 1px solid #3c4566; padding: 20px; border-radius: 4px;">
        <% if (matches && matches.length > 0) { %>
            <ul style="list-style: none; padding: 0; margin: 0;">
                <% matches.forEach(match => { %>
                    <li style="padding: 15px; border-bottom: 1px solid #2a3454; display: flex; justify-content: space-between; align-items: center;">
                        <span style="font-family: 'Segoe UI', monospace; color: #d4af37; font-weight: bold;">
                            КОД КОМНАТЫ: <%= match.roomId %>
                        </span>
                        <span style="color: #8da4c4; font-size: 0.9em;">
                            <%= new Date(match.date).toLocaleString() %>
                        </span>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p style="text-align: center; color: #8da4c4;">История пуста.</p>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>
