function renderSlots(state) {
    const fill = (id, items, side, type) => {
        const div = document.getElementById(id);
        if (!div) return;
        div.innerHTML = '';
        
        // Создаем плоский массив всех персонажей для поиска по ID
        let allCharacters = [];
        if (charsData) {
            Object.values(charsData).forEach(elementGroup => {
                allCharacters.push(...elementGroup);
            });
        }

        items.forEach(item => {
            const s = document.createElement('div');
            s.className = 'slot-circle' + (type === 'ban' ? ' slot-ban' : '');
            
            // Получаем ID (учитываем, что бан может быть объектом {id, team})
            const charId = (typeof item === 'object' && item !== null) ? item.id : item;
            
            const character = allCharacters.find(x => x.id === charId);
            if (character) {
                s.innerHTML = `<img src="${character.img}" style="width:100%; height:100%; object-fit:cover;">`;
            }
            div.appendChild(s);
        });
    };

    // Заполнение слотов для обеих сторон
    fill('blue-bans', state.bans.filter(b => b.team === 'blue'), 'blue', 'ban');
    fill('red-bans', state.bans.filter(b => b.team === 'red'), 'red', 'ban');
    fill('blue-picks-1', state.bluePicks, 'blue', 'pick');
    fill('red-picks-1', state.redPicks, 'red', 'pick');
}
