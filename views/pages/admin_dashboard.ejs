<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/style.css">
    <style>
        body { padding: 50px; overflow-y: auto; }
        .container { max-width: 800px; margin: 0 auto; }
        .tour-item { 
            background: #161c30; padding: 20px; margin-bottom: 15px; 
            border: 1px solid #2a3454; display: flex; justify-content: space-between; align-items: center; 
        }
        .btn-manage { background: #4facfe; color: #000; padding: 8px 15px; text-decoration: none; border-radius: 4px; font-weight: bold; }
        .actions { display: flex; gap: 10px; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Tournament Manager</h1>
        <a href="/admin/secret-add" class="btn-primary" style="display:inline-block; margin-bottom: 20px;">+ Create New Tournament</a>
        
        <% tournaments.forEach(t => { %>
            <div class="tour-item">
                <div>
                    <h3 style="margin:0; color:#d4af37"><%= t.title %></h3>
                    <span style="color:#888; font-size: 0.9em;"><%= t.slug %></span>
                </div>
                <div class="actions">
                    <a href="/tournament/<%= t.slug %>" target="_blank" style="color:#aaa; margin-right:10px;">View</a>
                    <a href="/admin/manage/<%= t.slug %>" class="btn-manage">Manage Content</a>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>
